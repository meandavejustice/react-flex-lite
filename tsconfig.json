{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "ES5"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
  },
  "include": ["src"]
}
